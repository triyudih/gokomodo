<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record model="ir.ui.view" id="view_sale_order_inherit_tree">
            <field name="name">sale.order.inherit.tree</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_quotation_tree_with_onboarding"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_id']" position="before">
                    <field name="business_model" />
                </xpath>
            </field>
        </record>

        <record model="ir.ui.view" id="view_sale_order_inherit_form">
            <field name="name">sale.order.inherit.form</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="business_model" required="1"/>
                </xpath>

                <xpath expr="//field[@name='order_line']/tree/field[@name='tax_id']" position="attributes">
                    <attribute name="domain">[('type_tax_use','=','sale'),('company_id','=',parent.company_id),('business_model','=',parent.business_model)]</attribute>
                </xpath>
            </field>
        </record>

        <record id="view_sale_order_inherit_search" model="ir.ui.view">
            <field name="name">sale.order.search.inherited</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_sales_order_filter"/>
            <field name="arch" type="xml">
                <xpath expr="//search/group" position="inside">
                    <filter string="Business Model" name="group_by_business_model" domain="[]" context="{'group_by': 'business_model'}"/>
                </xpath>
            </field>
        </record>

   </data>
</odoo>